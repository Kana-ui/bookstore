<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Book</title>
    <link rel="stylesheet" href="../assets/css/style.css">
</head>
<body>
<div class="page">
    <div class="page-header">
        <h2>Edit Book</h2>
        <div class="nav-links">
            <a href="index.php">â¬… Back to list</a>
        </div>
    </div>

    {% if errors is not empty %}
        <div class="alert alert-error">
            <ul>
                {% for err in errors %}
                    <li>{{ err|e }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form method="POST">

        <label>Title:</label>
        <input type="text" name="title" value="{{ book.title|e }}" required>

        <label>Author:</label>
        <input type="text" name="author" value="{{ book.author|e }}" required>

        <label>Genre:</label>
        <input type="text" name="genre" value="{{ book.genre|e }}" required>

        <label>Publication Year:</label>
        <input type="number" name="publication_year" value="{{ book.publication_year|e }}" required>

        <label>ISBN (optional):</label>
        <input type="text" name="isbn" value="{{ book.isbn|e }}">

        <label>Description (optional):</label>
        <textarea name="description">{{ book.description|e }}</textarea>

        <button class="btn btn-primary" type="submit">Save Changes</button>
        <a class="btn btn-secondary" href="index.php">Cancel</a>
    </form>
</div>
</body>
</html>
